{% extends '@UnitedCMSCore/layout.full.html.twig' %}
{% block title %}United.{% endblock title %}
{% block content %}

    <div class="uk-card uk-card-default uk-card-body" style="width: 90%; max-width: 450px; margin: 0 auto;">
        <h2>Organizations</h2>

        <ul class="uk-nav">
            {% for organization in organizations %}
                <li><a href="{{ path('unitedcms_core_domain_index', {organization: organization.identifier}) }}"><span
                                uk-icon="icon: chevron-right" class="uk-margin-small-right"></span>{{ organization }}
                    </a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
